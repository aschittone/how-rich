<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css">
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet">

<div class="container"
	<div class="row"><br>

		<div class="jumbotron">
      <% if @calculation.profit < 0%>
        <h2 class="text-center">Based on our advanced algorithms, you would have lost <%= "$#{@calculation.profit}" %> on this stock, during this time period. </h2>
      <% else %>
      <h2 class="text-center">Based on our advanced algorithms, you would have made <%= "$#{@calculation.profit}" %> on this stock, during this time period. </h2>
      <% end %>
    </div>
	</div>
</div>

<div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
  <div class="panel text-center price-panel panel-blue">
    <div class="panel-heading">
      <h3>Total Profit</h3>
    </div>
    <div class="panel-body">
      <p class="lead big-lead"><strong>$<%= @calculation.profit%></strong></p>
    </div>
    <div class="panel-footer">
      <a href="http://www.investopedia.com/terms/p/profit.asp" class="btn btn-lg btn-block btn-primary">What's Profit?</a>
    </div>
  </div>
</div>

<div class="container">
	<div class="row">
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
          <div class="panel text-center price-panel panel-grey">
            <div class="panel-heading">
              <h3>Total Return (ROI)</h3>
            </div>
            <div class="panel-body">
              <p class="lead big-lead"><strong> <%= @calculation.total_return %>% </strong></p>
            </div>
            <div class="panel-footer">
              <a href="https://www.entrepreneur.com/encyclopedia/return-on-investment-roi" class="btn btn-lg btn-block btn-primary">What's ROI?</a>
            </div>
          </div>
        </div>


        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
          <div class="panel text-center price-panel panel-green">
            <div class="panel-heading">
              <h3>Annual Return</h3>
            </div>
            <div class="panel-body">
              <p class="lead big-lead"><strong><%= @calculation.annual_return %>%</strong></p>
            </div>
            <div class="panel-footer">
              <a href="http://www.investopedia.com/terms/a/annual-return.asp" class="btn btn-lg btn-block btn-primary">What's Annual Return?</a>
            </div>
          </div>
        </div>

        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
          <div class="panel text-center price-panel panel-red">
            <div class="panel-heading">
              <h3>Shares purchased</h3>
            </div>
            <div class="panel-body">
              <p class="lead big-lead"><strong><%= @calculation.shares %> shares</strong></p>
            </div>

            <div class="panel-footer">
              <a href="http://www.investopedia.com/terms/s/shares.asp" class="btn btn-lg btn-block btn-primary">What's a Share?</a>
            </div>
          </div>
        </div>
      </div>
</div>

<html>
<head>
  <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
      google.charts.load('current', {'packages':['line']});
      google.charts.setOnLoadCallback(drawChart);

    function drawChart() {

      var data = new google.visualization.DataTable();
      data.addColumn('number', 'Day');
      data.addColumn('number', 'Guardians of the Galaxy');
      data.addColumn('number', 'The Avengers');
      data.addColumn('number', 'Transformers: Age of Extinction');

      data.addRows([
        [1,  37.8, 80.8, 41.8],
        [2,  30.9, 69.5, 32.4],
        [3,  25.4,   57, 25.7],
        [4,  11.7, 18.8, 10.5],
        [5,  11.9, 17.6, 10.4],
        [6,   8.8, 13.6,  7.7],
        [7,   7.6, 12.3,  9.6],
        [8,  12.3, 29.2, 10.6],
        [9,  16.9, 42.9, 14.8],
        [10, 12.8, 30.9, 11.6],
        [11,  5.3,  7.9,  4.7],
        [12,  6.6,  8.4,  5.2],
        [13,  4.8,  6.3,  3.6],
        [14,  4.2,  6.2,  3.4]
      ]);

      var options = {
        chart: {
          title: 'Box Office Earnings in First Two Weeks of Opening',
          subtitle: 'in millions of dollars (USD)'
        },
        width: 900,
        height: 500,
        axes: {
          x: {
            0: {side: 'top'}
          }
        }
      };

      var chart = new google.charts.Line(document.getElementById('line_top_x'));

      chart.draw(data, google.charts.Line.convertOptions(options));
    }
  </script>
</head>
<body>
  <div id="line_top_x" align='center'></div>
</body>
</html>
